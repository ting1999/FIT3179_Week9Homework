{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width": 800,
  "height": 500,
  "title": "Capacity of nuclear power plants",
  "projection": {"type": "equalEarth"},
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/ting1999/FIT3179_Week9Homework/main/js/worldmap.topojson",
        "format": {"type": "topojson", "feature": "worldmap"}
      },
      "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/ting1999/FIT3179_Week9Homework/main/data/nuclear_power_plants.json"
      },
      "encoding": {
        "longitude": {"field": "longitude", "type": "quantitative"},
        "latitude": {"field": "latitude", "type": "quantitative"}
      },
      "layer": [
        {
          "mark": {
            "type": "circle",
            "tooltip": {"content": "data"}
          },
          "encoding": {
            "size": {"field": "mag", 
                     "type": "quantitative",
                     "scale": {
                          "domain": [4, 8]
                        }},
            "color": {"field": "depth", 
                      "type": "quantitative",
                      "scale":{
                          "scheme":"reds"
                      }          
            }
          }
        }
      ]
    } 
  ]
}
